{
	"manifest_version": 2,
	
	"name": "YouTube to XBMC",
	"description": "Send youtube videos to XBMC media center",
	"version": "1.2",
	"permissions": [ "http://*/*", "storage" ],
  
	"page_action": {   
		"default_icon": "assets/icon_48.png"       	
  	},
  
	"icons": { 
		"16": "assets/icon_16.png",		
		"48": "assets/icon_48.png",
		"128": "assets/icon_128.png"
	},
  
	"background": {
		"scripts": ["js/background.js"]
	},
  
	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/*"],
			"css": ["css/inject.css"],      
			"js": ["js/jquery-1.9.1.min.js", "js/injectXBMC.js"],
			"run_at": "document_idle"
		}
	],
  
  "options_page": "settings.html"
}