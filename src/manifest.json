{
	"manifest_version": 2,
	
	"name": "YouTube to XBMC",
	"description": "Send youtube videos to XBMC media center",
	"version": "3.1",
	"permissions": [ "http://*/*", "storage" ],	
  
	"icons": { 
		"16": "assets/icon_16.png",		
		"48": "assets/icon_48.png",
		"128": "assets/icon_128.png"
	},
  
	"background": {
		"scripts": ["js/enums.js", "js/background.js"]
	},
  
	"content_scripts": [
		{
			"matches": ["http://www.youtube.com/*", "https://www.youtube.com/*"],
			"css": ["css/toastr.css", "css/inject.css"],
			"js": ["js/jquery-1.9.1.min.js", "js/toastr.js", "js/enums.js", "js/injectXBMC.js"],
			"run_at": "document_idle",
			"all_frames": true
		}
	],
  
  "options_page": "settings.html"
}
